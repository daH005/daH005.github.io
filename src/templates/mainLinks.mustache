<header class="main-gb-color d-flex parallax-container">
    
    <div class="overlay" id="overlay"></div>

    <div class="container d-flex flex-column justify-content-center align-items-center">
        <div class=" w-100 " style="z-index:50;">

            {{#backUrl}}<a class="main__back-link" href="{{backUrl}}">< Назад</a>{{/backUrl}}

            <div class="main__heading row">
                <div class="col-12">
                    <h1 class="text-center">{{heading}}</h1>
                    <div id="main__subtitles">
                        <h1 class="text-center">Транспортные  машины</h2> 
                        <h1 class="text-center text-black opacity-75">Интерактивный музей</h1>
                    </div>
                </div>
            </div>

            <div class="main__links row justify-content-around" id="main__links">
                {{#urls}}
                
                <a href="{{pageUrl}}" class="text-decoration-none col-3 text-white"><img
                   src="{{imageUrl}}" class="w-100">
                   {{pageHeading}}
                </a>
                {{/urls}}
            </div>

        </div>
    </div>
</header>

<script> 

const links  = document.querySelector('#main__links');
const subtitles  = document.querySelector('#main__subtitles');
subtitles.style.display = 'none';
if(window.location.pathname == "index.html" || window.location.pathname == "/"){
    console.log(window.location.href);
    subtitles.style.display = 'block';
    links.classList.add('d-none');
    window.addEventListener('click', () => {
        links.classList.remove('d-none');
        subtitles.style.display = 'none';
    });
}

</script>